<% if current_user.like?(micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id),
               html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit "Unlike", class: "btn btn-info btn-xs disable" %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit "Like", class: "btn btn-info btn-xs active" %>
  <% end %>
<% end %>